# Application Settings
NODE_ENV=development
LOG_LEVEL=info
SIGNAL_SYMBOLS=AAPL,BTC-USD
SIGNAL_NOTIFY_THRESHOLD=60.0
ENABLE_LLM_EXPLANATIONS=false

# Database
# Local development (Docker):
DATABASE_URL=postgresql+psycopg://[signals_user]:[signals_password]@localhost:5432/signals

# Production (Supabase) - Set this in Prefect Cloud as a secret:
SUPABASE_URL_SESSION_POOLER=postgresql://postgres.[project-ref]:[password]@aws-1-[region].pooler.supabase.com:5432/postgres

# Email Service (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL="Signals <onboarding@resend.dev>"
APP_BASE_URL=https://signalsapp.dev # Placeholder used only for unsubscribe links

# AI Models
LLM_PROVIDER=deepseek
DEEPSEEK_API_KEY=sk-...

# PostHog
POSTHOG_PROJECT_API_KEY=phc_xxxxxxxxxxxxx
POSTHOG_HOST=https://us.i.posthog.com

# Prefect Cloud (Optional)
# PREFECT_API_MODE=ephemeral
# PREFECT_API_KEY=pnu_xxxxxxxxxxxxx
# PREFECT_WORKSPACE=your-workspace-id
# PREFECT_API_URL
